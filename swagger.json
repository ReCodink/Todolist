{
    "openapi": "3.0.0",
    "info": {
        "title": "Todolist API",
        "version": "1.0.0",
        "description": "REST API untuk Todolist API"
    },
    "servers": [
        {
            "url": "http://localhost:8081",
            "description": "local server"
        }
    ],
    "paths": {
        "/api/todolist": {
            "get": {
                "summary": "Mendapatkan daftar todolist",
                "description": "Mengambil daftar semua todolist yang tersedia.",
                "responses": {
                    "200": {
                        "description": "Daftar todolist berhasil diambil"
                    },
                    "401": {
                        "description": "Unauthorized Access"
                    },
                    "500": {
                        "description": "Kesalahan server"
                    }
                }
            },
            "post": {
                "summary": "Membuat todolist baru",
                "description": "Membuat todolist baru dengan informasi yang diberikan.",
                "requestBody": {
                    "description": "Data todolist baru",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/todolist"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Todolist baru berhasil dibuat"
                    },
                    "400": {
                        "description": "Permintaan tidak valid"
                    },
                    "401": {
                        "description": "Unauthorized Access"
                    },
                    "500": {
                        "description": "Kesalahan server"
                    }
                }
            }
        },
        "/api/todolist/{id}": {
            "get": {
                "summary": "Mendapatkan todolist berdasarkan ID",
                "description": "Mengambil detail todolist berdasarkan ID yang diberikan.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID todolist yang akan diambil",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detail todolist berhasil diambil"
                    },
                    "401": {
                        "description": "Unauthorized Access"
                    },
                    "404": {
                        "description": "Todolist tidak ditemukan"
                    },
                    "500": {
                        "description": "Kesalahan server"
                    }
                }
            },
            "put": {
                "summary": "Mengupdate todolist berdasarkan ID",
                "description": "Mengupdate detail todolist berdasarkan ID yang diberikan.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID todolist yang akan diupdate",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Data todolist yang akan diupdate",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/todolist"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Todolist berhasil diupdate"
                    },
                    "400": {
                        "description": "Permintaan tidak valid"
                    },
                    "401": {
                        "description": "Unauthorized Access"
                    },
                    "404": {
                        "description": "Todolist tidak ditemukan"
                    },
                    "500": {
                        "description": "Kesalahan server"
                    }
                }
            },
            "delete": {
                "summary": "Menghapus todolist berdasarkan ID",
                "description": "Menghapus todolist berdasarkan ID yang diberikan.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID todolist yang akan dihapus",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Todolist berhasil dihapus"
                    },
                    "401": {
                        "description": "Unauthorized Access"
                    },
                    "404": {
                        "description": "Todolist tidak ditemukan"
                    },
                    "500": {
                        "description": "Kesalahan server"
                    }
                }
            }
        },
        "/api/pagination/todolist": {
            "get": {
                "summary": "Mendapatkan daftar todolist dengan paginasi",
                "description": "Mengambil daftar todolist dengan paginasi.",
                "parameters": [
                    {
                        "in": "query",
                        "name": "page",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "in": "query",
                        "name": "limit",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar todolist berhasil diambil dengan paginasi"
                    },
                    "401": {
                        "description": "Unauthorized Access"
                    },
                    "500": {
                        "description": "Kesalahan server"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "todolist": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Judul todolist"
                    }
                },
                "required": ["title"]
            }
        }
    }
}
